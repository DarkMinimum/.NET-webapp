@model PlantsShop.Models.LoginModel

@{
    Layout = "_Layout";
}
 
<div class="row justify-content-md-center padding-top">
    <div class="col" >
        <h2 style="text-align: center;">Log in</h2>
 
        <a style="text-align: center; display: block;" asp-action="Register" asp-controller="Account">Register</a>
 
        <form class="padding-top" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group row justify-content-md-center">
                    <label class="col-sm-2 col-form-label" asp-for="Email">Email</label>
                    <div class="col-sm-3">
                        <input placeholder="Email" class="form-control" type="text" asp-for="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>            
                </div>
                <div class="form-group row justify-content-md-center" style="margin-top: 50px;">
                    <label class="col-sm-2 col-form-label" asp-for="Password">Password</label>
                    <div class="col-sm-3">
                        <input placeholder="Password" class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>   
                </div>
                <div style="text-align: center; margin-top: 40px;">
                    <input class="btn btn-success" style="color: #FFFF;"type="submit" value="Log in" />
                </div>
            </div>        
        </form>
    </div>
</div>